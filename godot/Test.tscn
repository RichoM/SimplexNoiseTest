code = "shader_type spatial;

uniform sampler2D clouds_texture;


vec3 move(vec3 pt, float disp) {	
	float x = pt.x;
	float y = pt.y;
	float z = pt.z;
	
	float r = sqrt(x*x + y*y + z*z);
	float i = acos(z/r);
	float a = atan(y, x);
	
	r += disp;
	pt.x = r * cos(a) * sin(i);
	pt.y = r * sin(a) * sin(i);
	pt.z = r * cos(i);
	return pt;
}

void vertex() {
	float disp = texture(clouds_texture, vec2(UV.y*2.35, UV.x + TIME*-0.015)).r;
	
	VERTEX = move(VERTEX, disp * 0.25);
}

void fragment() {
	vec3 albedo = texture(clouds_texture, vec2(UV.y*2.35, UV.x + TIME*-0.025)).rgb;
	ALBEDO = albedo;
	ALPHA = smoothstep(0.45, 0.65, albedo.g) * 0.35;
	EMISSION = vec3(1.0);
}
"

